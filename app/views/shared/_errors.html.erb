<% if errors.any? %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <% errors.full_messages.each do |msg| %>
      <ul>
        <%= msg %>
      </ul>
    <% end %>
  </div>
<% end %>
