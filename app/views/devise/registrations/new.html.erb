<header>
  <h3>Register Account</h3>
</header>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form well' }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <%= f.text_field :first_name, autofocus: true, placeholder: 'first name', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.text_field :last_name, autofocus: true, placeholder: 'last name', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, placeholder: 'email', class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if @minimum_password_length %>
      <%= f.password_field :password, autocomplete: "off", placeholder: 'password minimum 8 characters', class: 'form-control' %>
    <% else %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'confirm password' , class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= check_box_tag(:subscribe) %>
    <%= label_tag(:subscribe, "I'd like to receive marketing email updates") %>
  </div>

  <div class="actions">
    <%= f.submit "Register", class: 'btn btn-default' %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>