
    <header>
      <h2>Log in</h2>
    </header>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form well' }) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'email address' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'password min 8 characters' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-default' %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>